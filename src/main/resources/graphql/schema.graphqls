# The requirements doesn't detail which fields are nullable,
#so, I made all field nullable except the ID

type Author{
    authorId: Int
    firstName: String
    lastName: String
    email:String
    phone:String
    street: String
    city:String
    state:String
    books: [Book!]
}

type Book{
    bookId: Int
    author: Author
    isbn: String
    publishDate: String
    title: String
    publisher: Publisher
    price: String
}

type Publisher{
    publisherId: Int
    name: String
    email:String
    phone:String
    street: String
    city:String
    state:String
    books: [Book!]
}

type Query{
    getAuthors:[Author!]!
    getBooks: [Book!]!
    getPublishers: [Publisher!]!
    findBookById(id: String!):Book
    findAuthorById(id: String!): Author
    findPublisherById(id: String!): Publisher
}

